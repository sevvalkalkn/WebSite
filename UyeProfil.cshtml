@model WebSite.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>@Model.AdSoyad - Profil</h2>*@

<div class="col-md-12">
    <div class="card my-4">
        <h5 class="card-header">@Model.AdSoyad - Profil</h5>
        <div class="card-body">
            <div class="col-md-8">
               
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Yetki.Yetki1)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Yetki.Yetki1)
                    </dd>




                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.AdSoyad)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AdSoyad)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Foto)
                    </dt>

                    <dd>
                        <img src="@Model.Foto" width="75" height="100" class="" alt="@Model.AdSoyad" />
                    </dd>


                 

                </dl>
                </div>
            </div>
        </div>

                <div class="card my-4">
                    <h5 class="card-header">Yazdığı Dersler</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @foreach (var item in Model.Makales.OrderByDescending(m => m.MakaleId).Take(5))
                                {
                                    <li><a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a></li>
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>
