<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>CodeBox</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
   

    <!-- Custom styles for this template -->
    <link href="~/Content/css/blog-home.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">CodeBox</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index/">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimizda/">Hakkımda</a>
                    </li>
                    @*<li class="nav-item">
                            <a class="nav-link" href="#">Dersler</a>
                        </li>*@
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim/">İletişim</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                    @if (Session["uyeid"] != null)
                    {
                    <li class="nav-item dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                         <a href="/Uye/Index/" class="dropdown-toggle" data-toggle="dropdown"><i class=""></i> @Session["kullaniciadi"].ToString() <b class="caret"></b></a>
                        </button>
                        
                            <ul class="dropdown-menu">

                                <li>
                                    <a href="/Uye/Index/@Session["uyeid"]">@Session["kullaniciadi"].ToString()<i class="fas fa-user fa-fw"></i> Profil</a>
                                </li>



                                @if (Convert.ToInt32(Session["yetkiid"]) == 1)
                                {
                                    <li>
                                        <a href="/Admin/Index/" target="_blank"><i class="fas fa-fingerprint"></i> Admin Paneli</a>
                                    </li>
                                }
                                <li class="divider"></li>
                                <li>
                                    <a href="/Uye/Logout/"><i class="fa fa-fw fa-power-off"></i> Çıkış</a>
                                </li>
                            </ul>
                            
                    </li>
                    }
                    else
                    {

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Giriş
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/Uye/Login/">Giriş</a>
                                <a class="dropdown-item" href="/Uye/Create">Kaydol</a>

                            </div>
                        </div>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">
                    @*Şevval KALKAN*@
                    <small>@*Web Site*@</small>
                </h1>
                @*Content*@
                <div class="col-md-12">
                    @RenderBody()
                </div>


                <!-- Pagination -->
                @*<ul class="pagination justify-content-center mb-4">
                        <li class="page-item">
                            <a class="page-link" href="#">&larr; Older</a>
                        </li>
                        <li class="page-item disabled">
                            <a class="page-link" href="#">Newer &rarr;</a>
                        </li>
                    </ul>*@

            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <div class="card my-4">
                    @Html.Partial("BlogAraPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Kategoriler</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @{
                                    Html.RenderAction("KategoriPartial", "Home");
                                }

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                @*<div class="card my-4">
                        <h5 class="card-header">Son Yorumlar</h5>
                        <div class="card-body">
                          @{
                              Html.RenderAction("SonYorumlar", "Home");
                              }
                        </div>
                    </div>*@
             

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">CodeBox @DateTime.Now.Year</p>


        </div>
        <!-- /.container -->

    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


</body>

</html>
